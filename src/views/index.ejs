<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/update-file">Update File</a>
    </div>
    <div>
        <div class="create-user">
            <form action="/create-new-user" method="POST" class="form-user">
                <h2>Creat a new user</h2>
                <div class="form-group">
                    <label for="fname">First name:</label>
                    <input type="text" name="firstName">
                </div>
                <div class="form-group">
                    <label for="fname">Last name:</label>
                    <input type="text" name="lastName">
                </div>
                <div class="form-group">
                    <label for="fname">Email:</label>
                    <input type="email" name="email">
                </div>
                <div class="form-group">
                    <label for="fname">Address:</label>
                    <input type="text" name="address">
                </div>

                <div class="btnUser">
                    <button type="submit">Submit</button>
                </div>

            </form>
        </div>
        <div class="table-user">
            <table>

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    <% for(let i=0;i< dataUser.length; i++) { %>

                        <tr>
                            <td>
                                <%= dataUser[i].id %>
                            </td>
                            <td>
                                <%= dataUser[i].firstName %>
                            </td>
                            <td>
                                <%= dataUser[i].lastName %>
                            </td>
                            <td class="btnFuntion">
                                <button><a href="/detail/user/<%= dataUser[i].id %>">Detail</a></button>

                                <form action="/edit-user/<%= dataUser[i].id %>" method=" GET">
                                    <button>Edit</button>
                                </form>
                                <form action="/delete-user" method="POST">
                                    <input type="text" hidden value="<%= dataUser[i].id %>" name="userId" />
                                    <button>Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>

    </div>



</body>

</html>